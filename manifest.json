{
  "manifest_version": 3,
  "name": "VideoDanmaku",
  "description": "A simple extension for adding danmaku to YouTube videos.",
  "action": {
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://danmaku.200069.xyz/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch?v=*"
      ],
      "js": [
        "src/pages/content/index.tsx"
      ],
      "css": [
        "contentStyle.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "contentStyle.css",
        "icon-128.png",
        "icon-32.png",
        "src/pages/login/index.html"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ]
    }
  ]
}