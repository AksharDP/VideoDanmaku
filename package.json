{
  "name": "vite-web-extension",
  "version": "1.4.0",
  "description": "A simple chrome & firefox extension template with Vite, React, TypeScript and Tailwind CSS.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JohnBra/vite-web-extension.git"
  },
  "API_BASE_URL": "https://danmaku.200069.xyz",
  "scripts": {
    "build": "bun run vite build --config vite.config.chrome.ts",
    "build:chrome": "bun run vite build --config vite.config.chrome.ts",
    "build:firefox": "bun run vite build --config vite.config.firefox.ts",
    "dev": "bun run nodemon --config nodemon.chrome.json",
    "dev:chrome": "bun run nodemon --config nodemon.chrome.json",
    "dev:firefox": "bun run nodemon --config nodemon.firefox.json",
    "lint": "bun run eslint --ext .ts,.tsx src",
    "test": "bun test"
  },
  "type": "module",
  "dependencies": {
    "@happy-dom/global-registrator": "^18.0.1",
